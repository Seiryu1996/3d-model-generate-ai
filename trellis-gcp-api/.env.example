# GCP Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Cloud Storage
GCS_BUCKET_MODELS=your-project-trellis-models
GCS_BUCKET_INPUT=your-project-trellis-input
GCS_BUCKET_OUTPUT=your-project-trellis-output
GCS_BUCKET_TEMP=your-project-trellis-temp

# Cloud Tasks
CLOUD_TASKS_QUEUE=trellis-processing-queue
CLOUD_TASKS_LOCATION=us-central1

# Firestore
FIRESTORE_COLLECTION_JOBS=jobs

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
DEBUG=false

# Security
SECRET_KEY=your-secret-key-here
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=10

# TRELLIS Configuration
TRELLIS_MODEL_PATH=microsoft/TRELLIS-image-large
TRELLIS_TEXT_MODEL_PATH=microsoft/TRELLIS-text-large
TRELLIS_CACHE_DIR=/tmp/trellis-cache
SPCONV_ALGO=native
ATTN_BACKEND=flash-attn

# Development (Local Docker)
REDIS_URL=redis://redis:6379
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
DATABASE_URL=sqlite:///./trellis.db